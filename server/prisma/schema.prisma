generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum STATUS {
  PENDING
  SUCCESS
  EXPIRED
}

model Checkout {
  id        String    @id @default(uuid())
  brand     String?
  amount    Int
  currency  String?
  holder    String?
  integrity String
  status    STATUS
  paidAt    DateTime? @map("paid_at")
  createdAt DateTime  @default(now()) @map("created_at")

  @@map("checkouts")
}
